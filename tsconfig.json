{
  "awesomeTypescriptLoaderOptions": {
    "transpileOnly": true,
    "useCache": true
  },
  "compilerOptions": {
    "paths": { "*": ["types/*"] },
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2016", "es2017.object"],
    "allowJs": true,
    "jsx": "react",
    "declaration": false,
    "sourceMap": true,
    "outDir": "dist/",
    "removeComments": true,
    "importHelpers": true,

    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,

    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["nerdlets/**/*", "launchers/**/*", "src/**/*"],
  "exclude": ["node_modules"]
}
